<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#D4AF37</item>
        <item name="colorPrimaryDark">#B8860B</item>
        <item name="colorAccent">#F7EF8A</item>
        <item name="android:windowBackground">#0F0F0F</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textColorPrimary">#F5F5F5</item>
        <item name="android:textColorSecondary">#A0A0A0</item>
        <item name="android:statusBarColor">#0F0F0F</item>
        <item name="android:navigationBarColor">#0F0F0F</item>
        <item name="android:editTextBackground">@drawable/edit_text_background</item>
    </style>
    
    <!-- Tema sin ActionBar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <!-- Tema para diálogos translúcidos -->
    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- Estilos para texto -->
    <style name="TextGold">
        <item name="android:textColor">#D4AF37</item>
    </style>
    
    <style name="TextSuccess">
        <item name="android:textColor">#10b981</item>
    </style>
    
    <style name="TextWarning">
        <item name="android:textColor">#f59e0b</item>
    </style>
    
    <style name="TextDanger">
        <item name="android:textColor">#ef4444</item>
    </style>
    
    <!-- Estilos para botones -->
    <style name="ButtonGold" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gold_background</item>
        <item name="android:textColor">#0F0F0F</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>
    
</resources>