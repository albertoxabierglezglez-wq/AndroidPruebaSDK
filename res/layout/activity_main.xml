  
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark"
    tools:context=".MainActivity">

    <!-- ScrollView para contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="ifContentScrolls">

        <!-- Layout de contenido principal -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pantalla de configuraciÃ³n (inicialmente visible) -->
            <LinearLayout
                android:id="@+id/setupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Card de configuraciÃ³n -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Icono -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘›"
                            android:textSize="48sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <!-- TÃ­tulo -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/primary_gold"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <!-- DescripciÃ³n -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_description"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginBottom="24dp" />

                        <!-- Badges de redes -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="32dp">

                            <!-- Badge BSC -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/network_bsc"
                                android:textColor="@color/bsc_color"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:padding="8dp"
                                android:background="@drawable/badge_background_bsc"
                                android:layout_marginEnd="8dp" />

                            <!-- Badge ETH -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/network_eth"
                                android:textColor="@color/eth_color"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:padding="8dp"
                                android:background="@drawable/badge_background_eth" />

                        </LinearLayout>

                        <!-- BotÃ³n Crear Wallets -->
                        <Button
                            android:id="@+id/createWalletBtn"
                            style="@style/ButtonGold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/create_wallets"
                            android:layout_marginBottom="12dp" />

                        <!-- BotÃ³n Importar Wallets -->
                        <Button
                            android:id="@+id/importWalletBtn"
                            style="@style/ButtonSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/import_wallets" />

                        <!-- InformaciÃ³n -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/setup_info"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@color/bg_dark_gradient"
                            android:layout_marginTop="24dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Dashboard (inicialmente oculto) -->
            <LinearLayout
                android:id="@+id/dashboardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Header con logo y estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Logo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Îž"
                            android:textColor="@color/primary_gold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/primary_gold"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingStart="8dp" />

                    </LinearLayout>

                    <!-- Estado de conexiÃ³n -->
                    <TextView
                        android:id="@+id/connectionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_disconnected"
                        android:textColor="@color/danger"
                        android:textSize="12sp"
                        android:padding="16dp"
                        android:background="@color/bg_card"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Card de Balance Total -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/total_balance"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$0.00 USD"
                                android:textColor="@color/text_light"
                                android:textSize="28sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="32sp"
                            android:paddingStart="16dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Grid de balances por red -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card BSC -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bscBalanceCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/bsc_color"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Network indicator -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/network_bsc"
                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:padding="8dp"
                                android:background="@drawable/network_indicator_background"
                                android:layout_gravity="end" />

                            <!-- Balance info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/bsc_balance"
                                        android:textColor="#80000000"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/bscBalance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/not_connected"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="4dp" />

                                    <TextView
                                        android:id="@+id/bscUsdValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="$0.00"
                                        android:textColor="#80000000"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="B"
                                    android:textSize="24sp"
                                    android:textColor="#80000000"
                                    android:paddingStart="16dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Card ETH -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ethBalanceCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/eth_color"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Network indicator -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/network_eth"
                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:padding="8dp"
                                android:background="@drawable/network_indicator_background"
                                android:layout_gravity="end" />

                            <!-- Balance info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/eth_balance"
                                        android:textColor="#80000000"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/ethBalance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/not_connected"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="4dp" />

                                    <TextView
                                        android:id="@+id/ethUsdValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="$0.00"
                                        android:textColor="#80000000"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Îž"
                                    android:textSize="24sp"
                                    android:textColor="#80000000"
                                    android:paddingStart="16dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Grid de acciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- BotÃ³n Enviar -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sendBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/bg_card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœˆï¸"
                                android:textSize="24sp"
                                android:textColor="@color/primary_gold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send"
                                android:textColor="@color/text_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- BotÃ³n Recibir -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/receiveBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/bg_card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“±"
                                android:textSize="24sp"
                                android:textColor="@color/success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/receive"
                                android:textColor="@color/text_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- BotÃ³n Backup -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/backupBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/bg_card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ›¡ï¸"
                                android:textSize="24sp"
                                android:textColor="#8B5CF6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/backup"
                                android:textColor="@color/text_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- BotÃ³n Desconectar -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/disconnectBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/bg_card"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸšª"
                                android:textSize="24sp"
                                android:textColor="@color/danger" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disconnect"
                                android:textColor="@color/text_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Historial de transacciones -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header del historial -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/transaction_history"
                                android:textColor="@color/primary_gold"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/transactionCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 transacciones"
                                android:textColor="@color/text_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Lista de transacciones -->
                        <LinearLayout
                            android:id="@+id/transactionHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <!-- Estado vacÃ­o (inicial) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="32dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’±"
                                    android:textSize="48sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/no_transactions"
                                    android:textColor="@color/text_light"
                                    android:textSize="16sp"
                                    android:layout_marginTop="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_transaction"
                                    android:textColor="@color/text_gray"
                                    android:textSize="12sp"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>