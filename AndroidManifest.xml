<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.axgg.walletmultired">

    <!-- Permisos básicos -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Para API 29 o inferior, permiso de almacenamiento -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Actividad para recibir (simplificada) -->
        <activity
            android:name=".ReceiveDialog"
            android:theme="@android:style/Theme.Dialog"
            android:exported="false" />
            
        <!-- Actividad para backup (simplificada) -->
        <activity
            android:name=".BackupDialog"
            android:theme="@android:style/Theme.Dialog"
            android:exported="false" />
        
        <!-- Proveedor de archivos (simplificado - elimina la referencia a @xml/file_paths) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.axgg.walletmultired.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- Se elimina meta-data que referencia @xml/file_paths -->
        </provider>

    </application>

</manifest>